#This is a generic password generator with duplicates available

import string
import random

s1 = list(string.ascii_lowercase)
s2 = list(string.ascii_uppercase)
s3 = list(string.digits) + ['!', '?']


user_input: int = int(input("How many characters do you want in your password? "))


while True:

    try:

        number_of_chars = user_input

        if number_of_chars < 4:

            print("Your password should be at least 4 characters long.")

            user_input = int(input("How many characters do you want in your password? "))

        else:

            break

    except:
        print("Please, enter integer numbers only.")

        user_input = int(input("How many characters do you want in your password? "))

#a function to shuffle all lists

def shuffling():
    random.shuffle(s1)
    random.shuffle(s2)
    random.shuffle(s3)


result = []


numbers_only: str = input("Do you want a password consisting of numbers only? All inputs except 'yes' or y' will "
                          "result in a password consisting of all types of characters! ")

if numbers_only.lower() == 'y' or numbers_only.lower() == 'yes':
    part1 = round(number_of_chars)

    s3 = list(string.digits)
    random.shuffle(s3)

    for x in range(part1):
        result.append(s3[0])
        shuffling()


else:
    part1 = round(number_of_chars * (30 / 100))
    part2 = round(number_of_chars * (40 / 100))

    for x in range(part1):
        result.append(s1[0])
        shuffling()
        result.append(s2[0])
        shuffling()

    for x in range(part2):
        result.append(s3[0])
        shuffling()

#shuffling the result list for either numbers only or not numbers only
random.shuffle(result)


password = "".join(result)
print("Strong Password: ", password)
